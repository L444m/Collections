<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Commons" />

    <!-- Layout -->

    <style name="Commons.Layout" />

    <style name="Commons.Layout.MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Commons.Layout.WrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Commons.Layout.MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Commons.Layout.WrapMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Commons.Layout.MatchAuto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Commons.Layout.AutoMatch">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Commons.Layout.MatchMatch.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Commons.Layout.MatchMatch.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Commons.Layout.MatchWrap.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Commons.Layout.MatchWrap.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Commons.Layout.MatchMatch.Bg">
        <item name="background">@color/black</item>
    </style>

    <style name="Commons.Layout.MatchMatch.Vertical.Bg">
        <item name="background">@color/black</item>
    </style>

    <style name="Commons.Layout.MatchMatch.Horizontal.Bg">
        <item name="background">@color/black</item>
    </style>


    <!-- Divider -->

    <style name="Commons.Divider">
        <item name="android:background">@color/Gray</item>
    </style>

    <style name="Commons.Divider.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Commons.Divider.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Commons.Divider.Horizontal.Padding">
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>

    <style name="Commons.Divider.Vertical.Padding">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="Commons.Divider.Horizontal.Margin">
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="Commons.Divider.Vertical.Margin">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>


    <!-- TextView appearance -->

    <style name="Commons.Text">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Commons.Text.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Commons.Text.Content">
        <item name="android:textColor">@color/Gray</item>
        <item name="android:textSize">13sp</item>
    </style>


    <!-- Image appearance -->

    <style name="Commons.Image" />


</resources>